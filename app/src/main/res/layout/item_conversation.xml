<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="12dp">

    <ImageView
        android:id="@+id/conversationProfileImage"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/conversationUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/conversationTime"
        app:layout_constraintStart_toEndOf="@+id/conversationProfileImage"
        app:layout_constraintTop_toTopOf="@+id/conversationProfileImage"
        tools:text="Username" />

    <TextView
        android:id="@+id/conversationLastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/conversationUsername"
        app:layout_constraintStart_toStartOf="@+id/conversationUsername"
        app:layout_constraintTop_toBottomOf="@+id/conversationUsername"
        tools:text="This is the last message" />

    <TextView
        android:id="@+id/conversationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#777777"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/conversationUsername"
        tools:text="10:30 AM" />

    <TextView
        android:id="@+id/conversationUnreadCount"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/unread_count_background"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/conversationTime"
        app:layout_constraintTop_toBottomOf="@+id/conversationTime"
        tools:text="3"
        tools:visibility="visible" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/conversationUsername"
        app:layout_constraintTop_toBottomOf="@+id/conversationLastMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>